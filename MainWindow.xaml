<Window x:Class="GreenCrosshairOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GreenCrosshairOverlay" Height="100" Width="100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" Opacity="1">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Left Bar -->
            <Rectangle Fill="Lime" Grid.Column="0" Grid.Row="1" Height="2" Margin="0,4"/>
            <!-- Right Bar -->
            <Rectangle Fill="Lime" Grid.Column="2" Grid.Row="1" Height="2" Margin="0,4"/>
            <!-- Top Bar -->
            <Rectangle Fill="Lime" Grid.Column="1" Grid.Row="0" Width="2" Margin="4,0"/>
            <!-- Bottom Bar -->
            <Rectangle Fill="Lime" Grid.Column="1" Grid.Row="2" Width="2" Margin="4,0"/>
        </Grid>
    </Grid>
</Window>
